<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/csk_500"
    android:padding="@dimen/_8sdp"
    tools:context=".SettingsScreenFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@null"
        android:contentDescription="back button"
        android:scaleType="fitCenter"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/imgvSettings"
        app:layout_constraintEnd_toStartOf="@+id/imgvSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgvSettings" />

    <ImageView
        android:id="@+id/imgvSettings"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:scaleType="fitStart"
        android:src="@drawable/settings_text"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/settingCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_16sdp"
        app:cardBackgroundColor="@color/csk_200"
        app:cardCornerRadius="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="@id/btnVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgvSettings"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/_1sdp" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintBottom_toBottomOf="@+id/tvSetting"
        app:layout_constraintEnd_toEndOf="@+id/settingCardView"
        app:layout_constraintStart_toStartOf="@+id/settingCardView"
        app:layout_constraintTop_toTopOf="@+id/settingCardView" />

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:fontFamily="@font/sf_compact_rounded_medium"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="Setting"
        android:textAllCaps="true"
        android:textColor="#3A3A3A"
        android:textFontWeight="500"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="@+id/settingCardView"
        app:layout_constraintTop_toTopOf="@+id/settingCardView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/squareButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:backgroundTint="@color/black"
        android:background="@drawable/image_button_border"
        app:icon="@drawable/square_vector"
        app:iconSize="@dimen/_14sdp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:iconPadding="0dp"
        android:padding="0dp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/xButton"
        app:layout_constraintEnd_toStartOf="@+id/lineButton"
        app:layout_constraintTop_toTopOf="@+id/xButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lineButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:includeFontPadding="false"
        android:backgroundTint="@android:color/transparent"
        android:minWidth="0dp"
        android:padding="0dp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="0dp"
        android:text="-"
        android:textFontWeight="400"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toBottomOf="@+id/xButton"
        app:layout_constraintEnd_toStartOf="@+id/xButton"
        app:layout_constraintTop_toTopOf="@+id/xButton"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/xButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/image_button_top_left_corner"
        app:backgroundTint="@android:color/black"
        app:icon="@drawable/x_vector"
        app:iconSize="@dimen/_12sdp"
        app:iconPadding="0dp"
        android:padding="0dp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSetting" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sf_mono_regular"
        android:includeFontPadding="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="Privacy Policy _"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="@dimen/_12ssp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_book"
        app:iconSize="@dimen/_16sdp"
        app:iconTint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvSetting"
        app:layout_constraintTop_toBottomOf="@+id/tvSetting" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMoreApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sf_mono_regular"
        android:includeFontPadding="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="More Apps _"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="@dimen/_12ssp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_apps"
        app:iconSize="@dimen/_16sdp"
        app:iconTint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvSetting"
        app:layout_constraintTop_toBottomOf="@+id/btnPolicy" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShareApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sf_mono_regular"
        android:includeFontPadding="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="Share app _"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="@dimen/_12ssp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_connection"
        app:iconSize="@dimen/_16sdp"
        app:iconTint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvSetting"
        app:layout_constraintTop_toBottomOf="@+id/btnMoreApps" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/sf_mono_regular"
        android:includeFontPadding="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="Check version _"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="@dimen/_12ssp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_info"
        app:iconSize="@dimen/_16sdp"
        app:iconTint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvSetting"
        app:layout_constraintTop_toBottomOf="@+id/btnShareApp"
        app:layout_constraintBottom_toBottomOf="@id/settingCardView"/>
</androidx.constraintlayout.widget.ConstraintLayout>