<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- backgroudn -->
    <item
        android:id="@+id/nackground_seekbar"
        android:height="@dimen/_4sdp"
        android:bottom="@dimen/_4sdp"
        android:top="@dimen/_4sdp">

        <shape android:shape="rectangle">
            <solid android:color="@color/csk_800" />
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

    <!-- progress background -->
    <item
        android:id="@+id/seekbar_progress_bg"
        android:height="@dimen/_4sdp"
        android:top="@dimen/_4sdp"
        android:bottom="@dimen/_4sdp" >

        <clip
            android:clipOrientation="horizontal"
            android:gravity="left">

            <shape android:shape="rectangle">
                <solid android:color="@color/white"/>
                <corners android:radius="@dimen/_8sdp" />
            </shape>
        </clip>
    </item>
</layer-list>